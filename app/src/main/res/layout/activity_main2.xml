<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#447287"
    android:padding="10dp"
    tools:context=".MainActivity2">
    <TextView
        android:layout_marginTop="50dp"
        android:background="@drawable/bg_xml"
        android:textColor="#F30D0D"
        android:id="@+id/tv_Content"
        android:gravity="center"
        android:textSize="20dp"
        android:text="1. Đâu là Con khỉ?"
        android:layout_width="match_parent"
        android:layout_height="40dp">
    </TextView>

    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="150dp">
        <ImageView
            android:padding="10dp"
            android:id="@+id/img_aw1"
            android:background="@drawable/bg_xml"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </ImageView>
        <LinearLayout
            android:layout_width="5dp"
            android:layout_height="wrap_content"></LinearLayout>
        <ImageView
            android:padding="10dp"
            android:id="@+id/img_aw2"
            android:background="@drawable/bg_xml"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </ImageView>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="150dp">
        <ImageView
            android:padding="10dp"
            android:id="@+id/img_aw3"
            android:background="@drawable/bg_xml"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </ImageView>
        <LinearLayout
            android:layout_width="5dp"
            android:layout_height="wrap_content"></LinearLayout>
        <ImageView
            android:padding="10dp"
            android:id="@+id/img_aw4"
            android:background="@drawable/bg_xml"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </ImageView>
    </LinearLayout>

    <TextView
        android:background="@drawable/bg_xml"
        android:id="@+id/tv_nextAw"
        android:text="Next"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#F44336"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="40dp">
    </TextView>
    <LinearLayout
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="20dp">
        <View
            android:id="@+id/v1"
            android:background="@drawable/bg_xml"
            android:layout_width="20dp"
            android:layout_height="match_parent">
        </View>
        <LinearLayout
            android:layout_width="2dp"
            android:layout_height="wrap_content">
        </LinearLayout>
        <View
            android:id="@+id/v2"
            android:background="@drawable/bg_xml"
            android:layout_width="20dp"
            android:layout_height="match_parent">
        </View>
        <LinearLayout
            android:layout_width="2dp"
            android:layout_height="wrap_content">
        </LinearLayout>
        <View
            android:id="@+id/v3"
            android:background="@drawable/bg_xml"
            android:layout_width="20dp"
            android:layout_height="match_parent">
        </View>
        <LinearLayout
            android:layout_width="2dp"
            android:layout_height="wrap_content">
        </LinearLayout>
        <View
            android:id="@+id/v4"
            android:background="@drawable/bg_xml"
            android:layout_width="20dp"
            android:layout_height="match_parent">
        </View>
        <LinearLayout
            android:layout_width="2dp"
            android:layout_height="wrap_content">
        </LinearLayout>
        <View
            android:id="@+id/v5"
            android:background="@drawable/bg_xml"
            android:layout_width="20dp"
            android:layout_height="match_parent">
        </View>
        <LinearLayout
            android:layout_width="2dp"
            android:layout_height="wrap_content">
        </LinearLayout>
    </LinearLayout>

</LinearLayout>